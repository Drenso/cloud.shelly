{
  "name": {
    "en": "Any Shelly WiFi Device",
    "nl": "Elk Shelly WiFi apparaat"
  },
  "images": {
    "small": "./assets/drivers/shelly/images/small.jpg",
    "large": "./assets/drivers/shelly/images/large.jpg",
    "xlarge": "./assets/drivers/shelly/images/xlarge.jpg"
  },
  "class": "other",
  "discovery": "shelly",
  "capabilities": [
    "rssi"
  ],
  "icon": "{{driverAssetsPath}}/icon.svg",
  "pair": [
    {
      "id": "shelly",
      "$template": "shelly",
      "navigation": {
        "next": "list_devices"
      }
    },
    {
      "id": "list_devices",
      "template": "list_devices",
      "options": {
        "singular": true
      },
      "navigation": {
        "next": "get_device"
      }
    },
    {
      "id": "get_device",
      "$template": "get_device"
    },
    {
      "id": "login_credentials",
      "template": "login_credentials",
      "options": {
        "logo": "../../../assets/shelly-logo.png",
        "usernameLabel": {
          "en": "Username (admin for gen2/3 devices)",
          "nl": "Gebruikersnaam (admin voor gen2/3 devices)"
        },
        "usernamePlaceholder": {
          "en": "Username",
          "nl": "Gebruikersnaam"
        },
        "PasswordLabel": {
          "en": "Password",
          "nl": "Wachtwoord"
        }
      }
    },
    {
      "id": "icon_select",
      "$template": "icon_select"
    },
    {
      "id": "add_device",
      "$template": "add_device"
    },
    {
      "id": "select_pairing",
      "$template": "select_pairing"
    },
    {
      "id": "manual_pairing",
      "$template": "manual_pairing"
    }
  ],
  "platforms": [ "local" ],
  "connectivity": [ "lan" ]
}
