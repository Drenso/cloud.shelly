{
  "id": "moveRollerShutter",
  "title": {
    "en": "Change roller shutter",
    "nl": "Wijzig roller shutter"
  },
  "titleFormatted": {
    "en": "Change roller shutter to [[direction]] for [[move_duration]] seconds",
    "nl": "Change roller shutter naar [[direction]] voor [[move_duration]] seconden"
  },
  "hint": {
    "en": "Use this card to open, close or stop your roller shutter for a given time.",
    "nl": "Gebruik deze actie om de roller shutter te openen, sluiten of stoppen met de opgegeven duur."
  },
  "args": [
    {
      "name": "direction",
      "type": "dropdown",
      "title": {
        "en": "Direction",
        "nl": "Richting"
      },
      "placeholder": {
        "en": "Direction",
        "nl": "Richting"
      },
      "values": [
        {
          "id": "open",
          "label": {
            "en": "Up",
            "nl": "Omhoog"
          }
        },
        {
          "id": "close",
          "label": {
            "en": "Down",
            "nl": "Omlaag"
          }
        }
      ]
    },
    {
      "name": "move_duration",
      "type": "number",
      "min": 0.1,
      "max": 3600,
      "step": 0.1,
      "title": {
        "en": "Duration in seconds",
        "nl": "Duur in seconden"
      },
      "placeholder": {
        "en": "Duration in seconds",
        "nl": "Duur in seconden"
      }
    },
    {
      "name": "device",
      "type": "device",
      "placeholder": {
        "en": "Select Shelly",
        "nl": "Selecteer Shelly"
      },
      "filter": "driver_id=shelly|shelly_cloud|shelly2-rollershutter|shelly2-rollershutter_cloud|shelly25-rollershutter|shelly25-rollershutter_cloud&capabilities=windowcoverings_set"
    }
  ],
  "platforms": ["local", "cloud"]
}
