{
  "name": {
    "en": "Shelly Smoke Detector",
    "nl": "Shelly Rook Detector"
  },
  "images": {
    "large": "./assets/drivers/shellysmoke/images/large.jpg",
    "small": "./assets/drivers/shellysmoke/images/small.jpg"
  },
  "class": "sensor",
  "$extends": [
    "defaults"
  ],
  "capabilities": [
    "alarm_smoke",
    "measure_temperature",
    "measure_battery",
    "rssi"
  ],
  "pair": [
    {
      "id": "list_devices",
      "template": "list_devices",
      "options": {
        "singular": true
      },
      "navigation": {
        "next": "icon_select"
      }
    },
    {
      "id": "icon_select",
      "$template": "icon_select"
    },
    {
      "id": "get_device",
      "$template": "get_device"
    },
    {
      "id": "login_credentials",
      "template": "login_credentials",
      "options": {
        "logo": "../../../assets/shelly-logo.png"
      }
    },
    {
      "id": "add_device",
      "$template": "add_device"
    },
    {
      "id": "select_pairing",
      "$template": "select_pairing"
    },
    {
      "id": "manual_pairing",
      "$template": "manual_pairing"
    }
  ],
  "energy": {
    "batteries": [
      "AA"
    ]
  },
  "deprecated": true
}
